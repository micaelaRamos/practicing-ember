<div class="product-details">

  {{!-- Header --}}
  <section>
    <h3>{{@name}}</h3>
    <div class="text-warning">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star-half-o"></i>
    </div>
  </section>

  {{!-- Price --}}
  <section>
    <del class="small text-black-50">{{currency @price.original sign="$"}}</del>
    <i class="text-danger font-weight-bold">{{currency @price.current}}</i> {{!-- Using default hash value --}}
  </section>

  {{#if @isDetail}}
    {{#if @colors}}
      <div>
        <h5>Color</h5>
        <div class="product-colors active-{{@color}}">
          {{#each @colors as |currColor|}}
            <div class="product-color color-{{currColor.color}}" {{on "click" (fn @onChangeColor currColor.color)}}></div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  {{/if}}
</div>