{{page-title "Item"}}
<GeneralContainer>
  <div class="product item-detail-page {{if this.isZoomed 'is-zoomed'}}">
    <Product::Image @src={{this.productImage}} @itemId={{this.id}} @toggleZoom={{this.toggleZoom}}/>
    <Product::Detail
      @isDetail={{true}}
      @name={{this.model.name}}
      @colors={{this.model.colors}}
      @color={{this.color}}
      @onChangeColor={{this.onChangeColor}}
      @price={{this.model.price}}
    />
  </div>
  <h5 class="mt-5">Features</h5>
  <ul>
    {{#each this.model.features as |feature|}}
    <li>{{feature}}</li>
    {{/each}}
  </ul>
</GeneralContainer>
